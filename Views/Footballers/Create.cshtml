@model testTask1.Models.Footballer

@{
    ViewData["Title"] = "Create";
}
<script>
    function CancelButton_OnClick() {
        document.getElementById("TeamDropdown").style.display = "block";
        document.getElementById("TeamNew").style.display = "none";
        document.getElementById("inputField").disabled = true;
        document.getElementById("dropdown").disabled = false;
    }
    function AddNewButton_OnClick() {
        document.getElementById("TeamDropdown").style.display = "none";
        document.getElementById("TeamNew").style.display = "block";
        document.getElementById("inputField").disabled = false;
        document.getElementById("dropdown").disabled = true;
    }
</script>
<h1>Create</h1>

<h4>Footballer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiddleName" class="control-label"></label>
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sex" class="control-label"></label>
                <input asp-for="Sex" class="form-control" />
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label"></label>
                <input asp-for="Birthday" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group" id="TeamNew" style="display: none">
                <label asp-for="TeamName" class="control-label"></label>
                <input  asp-for="TeamName" class="form-control" id="inputField" />
                <input type="button" name="button" class="button1" value="Cancel" OnClick="CancelButton_OnClick()" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group" id="TeamDropdown">
                <label asp-for="TeamName" class="control-label"></label>
                @Html.DropDownList("TeamName", new SelectList(ViewBag.TeamList), "Select a team", new { @class = "form-control"  , @id="dropdown" })
                <input type="button" name="button" class="button1" value="Add New" OnClick="AddNewButton_OnClick()" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <!--<input asp-for="Country" class="form-control" />-->
                @Html.DropDownList("Country", new SelectList(Country.CountryList), "Select a country", new
                { @class = "form-control"})
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
